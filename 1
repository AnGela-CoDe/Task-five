a = input("Введите строку  ")

def b(string):
  l = string.split() 
  # Разбиваем строку по пробелу. Получаем список подстрок
  c = list(map(lambda word: word.capitalize(), l))
   # Отображаем список подстрок в список подстрок с первой заглавной буквой
  b = ''.join(c) 
  # Соединяем получившийся список подстрок в строку с разделителем в виде пустой строки
  return b

d = b(a)

print(d)